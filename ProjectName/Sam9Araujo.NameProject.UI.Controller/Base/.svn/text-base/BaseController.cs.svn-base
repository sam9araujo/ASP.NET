using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using Laboris.Cosan.Domain.DTO;

namespace Laboris.Cosan.UI.Controller
{
    public class BaseController<T> where T : BaseDTO
    {
        T _view;

        public T View
        {
            get {
                if (_view == null)
                    _view = Activator.CreateInstance<T>();

                return _view;
            }
        }
    }
}
